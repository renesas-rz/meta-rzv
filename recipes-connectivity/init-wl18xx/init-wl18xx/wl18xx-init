#!/bin/sh
#
### BEGIN INIT INFO
# Provides: WL1837MOD WIFI/BLUETOOTH
# Default-Start:     5 12
# Default-Stop:      0 1 6
### END INIT INFO
case "$1" in
"start")
        # insert multimedia modules
	/sbin/modprobe -q -a wlcore-sdio
        ;;
stop)
        # remove multimedia modules
	/sbin/modprobe -q -r -a wlcore-sdio
        ;;
reload|restart)
        $0 stop
        sleep 1
        $0 start
        ;;
*)
	echo "usage: $0 { start | stop | restart }"
	;;
esac
