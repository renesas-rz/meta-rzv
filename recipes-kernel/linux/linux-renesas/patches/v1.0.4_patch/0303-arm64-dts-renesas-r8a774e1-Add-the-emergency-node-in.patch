From 6ad219b489e6569a6aa296f558f42f93cb4a35ed Mon Sep 17 00:00:00 2001
From: Hien Huynh <hien.huynh.px@renesas.com>
Date: Tue, 14 Apr 2020 15:01:47 +0700
Subject: [PATCH 303/309] arm64: dts: renesas: r8a774e1: Add the emergency node
 in thermal-zones

This patch enables emerency shutdown support for r8a774e1 SoC.

Signed-off-by: Hien Huynh <hien.huynh.px@renesas.com>
---
 arch/arm64/boot/dts/renesas/r8a774e1.dtsi | 14 ++++++++++++++
 1 file changed, 14 insertions(+)

diff --git a/arch/arm64/boot/dts/renesas/r8a774e1.dtsi b/arch/arm64/boot/dts/renesas/r8a774e1.dtsi
index f10981f..c75d95d 100644
--- a/arch/arm64/boot/dts/renesas/r8a774e1.dtsi
+++ b/arch/arm64/boot/dts/renesas/r8a774e1.dtsi
@@ -2585,6 +2585,20 @@
 		clock-frequency = <0>;
 	};
 	thermal-zones {
+		emergency {
+			polling-delay = <1000>;
+			on-temperature = <110000>;
+			off-temperature = <95000>;
+			target_cpus =	<&a57_1>,
+					<&a57_2>,
+					<&a57_3>,
+					<&a53_0>,
+					<&a53_1>,
+					<&a53_2>,
+					<&a53_3>;
+			status = "disabled";
+		};
+
 		sensor_thermal1: sensor-thermal1 {
 			polling-delay-passive = <250>;
 			polling-delay = <0>;
